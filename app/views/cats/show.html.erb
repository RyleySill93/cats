<table>
  <th> <h1><%= @cat.name %> </h1></th>
  <tr>
    <td>Birth Date</td>
    <td> <%= @cat.birth_date %> </td>
  </tr>
  <tr>
    <td>Color</td>
    <td> <%= @cat.color %> </td>
  </tr>
  <tr>
    <td>Sex</td>
    <td> <%= @cat.sex %> </td>
  </tr>
  <tr>
    <td>Description</td>
    <td> <%= @cat.description %> </td>
  </tr>

  <th><h3>Rentals</h3></th>
  <% @rentals.each do |rental| %>
    <tr>
      <td><%= rental.start_date %></td>
      <td><%= rental.end_date %></td>
      <td><%= rental.status %></td>

      <% if rental.status == "PENDING" %>
        <td> <%= button_to "approve", cat_cat_rental_requests_approve_url(rental.id) %> </td>
        <td> <%= button_to "deny", cat_cat_rental_requests_deny_url(rental.id) %> </td>
      <% end %>
    </tr>
  <% end %>
</table>
