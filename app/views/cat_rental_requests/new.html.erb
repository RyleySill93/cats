<h1> rent this adorable cat (if you dare) </h1>

<form action="<%= cat_rental_requests_url %>" method="post">
  <label for="rentable-cats"> choose your cat </label>
  <select id="rentable-cats" name="cat_rental_request[cat_id]">
    <% @cats.each do |cat| %>
      <option value="<%= cat.id %>"><%= cat.name %></option>
    <% end %>
  </select>
  <br><br>
  <label for="Start Date">Start Date</label>
  <input type="date" id="Start Date" name="cat_rental_request[start_date]">

  <label for="End Date">End Date</label>
  <input type="date" id="End Date" name="cat_rental_request[end_date]">

  <input type="submit" value="Book this cat">
</form>
